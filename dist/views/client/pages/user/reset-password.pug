extends ../../layouts/default.pug


block main
    .container.my-5
        .row.justify-content-center
            .col-6.page-reset-pw
                h1(class="text-center") Đổi mật khẩu mới 
                form(
                    action="/user/password/reset"
                    method="POST"
                )   
                    div(class="form-group")
                        label(for="email") Email
                        input(
                            class="form-control"
                            type="text"
                            id="email"
                            name="email"
                            require
                            value=email
                            readOnly
                        ) 
                    div(class="form-group")
                        label(for="password") Mật khẩu mới
                        input(
                            class="form-control"
                            type="text"
                            id="password"
                            name="password"
                            require
                        ) 
                    div(class="form-group")
                        label(for="confirmPassword") Xác nhận lại mật khẩu
                        input(
                            class="form-control"
                            type="text"
                            id="confirmPassword"
                            name="confirmPassword"
                            require
                        ) 
                    div(class="form-group float-right")
                        button(
                            type="text"
                            class="btn btn-primary btn-block"
                        ) Xác nhận
        