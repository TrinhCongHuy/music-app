extends ../../layouts/default.pug
include ../../mixins/box-head.pug

block main
    .song-detail 
        .container.my-3 
            .row 
                .col-12 
                    .song-title #{song.title}
                    .song-action 
                        div(class="song-action song-time") <i class="fa-regular fa-clock"></i> #{song.formattedDate}
                        div(class="song-action song-singer") <i class="fa-solid fa-microphone-lines"></i> #{singer.fullName}
                        div(class="song-action song-topic") <i class="fa-solid fa-music"></i> #{topic.title}
                        div(class=`song-action song-like ${isActive ? "active" : ""}` button-like=song.id) <i class="fa-solid fa-thumbs-up"></i> <span>#{song.like.length} lượt thích</span>
                        div(class="song-action song-listen") <i class="fa-solid fa-headphones"></i></i> <span>#{song.listen} lượt nghe</span>
                        div(class=`song-action song-heart ${isFavorite ? "active" : ""}` button-favorite=song.id) <i class="fa-regular fa-heart"></i> Bài hát yêu thích

                    .song-info.d-flex
                        .col-8
                            .song-play
                                .song-avatar 
                                    img(src=song.avatar)
                                .song-audio 
                                    div(id="aplayer" data-song=song data-singer=singer)
                        .col-4
                            .song-desc 
                                .song-label ***** Thông tin *****
                                .song-text !{song.description}
                    .song-lyrics.mt-5
                        .col-8.text-center
                            .song-label Lời bài hát
                            .song-text !{song.lyrics}
                    