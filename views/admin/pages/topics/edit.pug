extends ../../layouts/default.pug

block main 

    h1(class="mb-5") chỉnh sửa bài hát

    form(
        action=`/${prefixAdmin}/topics/edit/${topic.id}?_method=PATCH`
        method="POST"
        enctype="multipart/form-data"
    )
        div(class="form-group")
            label(for="title") Tiêu đề
            input(
                id="title"
                type="text"
                class="form-control"
                name="title"
                value=topic.title
                require
            ) 
        div(
            class="form-group"
            upload-image
            )
            label(for="avatar") Hình ảnh
            input(
                id="avatar"
                type="file"
                class="form-control-file"
                name="avatar"
                accept="image/*"
                upload-image-input
            ) 
            img(
                src=topic.avatar || ""
                upload-image-preview
                class="image-preview mt-3"
            )
        
        div(class="form-group")
            label(for="description") Mô tả
            textarea(
                id="mytextarea"
                class="form-control"
                name="description"
                rows="5"
                textarea
            ) #{topic.description}
       
        div(class="form-group form-check form-check-inline")
            input(
                id="statusActive"
                type="radio"
                class="form-check-input"
                name="status"
                value="active"
                checked=(topic.status == "active" ? true : false)
            ) 
            label(for="statusActive" class="form-check-label") Hoạt động
        div(class="form-group form-check form-check-inline")
            input(
                id="statusInActive"
                type="radio"
                class="form-check-input"
                name="status"
                value="inactive"
                checked=(topic.status == "active" ? false : true)
            ) 
            label(for="statusInActive" class="form-check-label") Dừng hoạt động
        div(class="form-group")
            button(
                type="submit"
                class="btn btn-primary"
            ) Cập nhật