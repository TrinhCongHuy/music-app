extends ../../layouts/auth.pug

block main 
    .page-auth
        .container.my-5 
            .row.justify-content-center
                .col-10 
                    div(class="text-center title") Wellcome to Admin
                    form(
                        action=`/${prefixAdmin}/auth/login`
                        method="POST"
                    )
                        div(class="form-group")
                            label(for="email") Email
                            input(
                                id="email"
                                type="text"
                                class="form-control"
                                name="email"
                                require
                            )
                        div(class="form-group")
                            label(for="password") Password
                            input(
                                id="password"
                                type="password"
                                class="form-control"
                                name="password"
                                require
                            )
                        div(class="form-group mt-4")
                            button(
                                type="submit"
                                class="btn btn-primary btn-block"
                            ) Đăng nhập