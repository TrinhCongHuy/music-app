extends ../../layouts/default.pug

block main 

    h1(class="mb-5") Thêm mới bài hát

    form(
        action=`/${prefixAdmin}/songs/create`
        method="POST"
        enctype="multipart/form-data"
    )
        div(class="form-group")
            label(for="title") Tiêu đề
            input(
                id="title"
                type="text"
                class="form-control"
                name="title"
                require
            ) 
        div(class="form-group")
            label(for="topic") Chủ đề
            select(
                id="topicId"
                class="form-control"
                name="topicId"
            )
                option(value="" selected default) -- Chọn chủ đề --
                each topic in topics 
                    option(value=topic.id) #{topic.title}

        div(class="form-group")
            label(for="singer") Ca sĩ
            select(
                id="singer"
                class="form-control"
                name="singerId"
            )
                option(value="" selected default) -- Chọn ca sĩ --
                each singer in singers 
                    option(value=singer.id) #{singer.fullName}
        div(
            class="form-group"
            upload-image
            )
            label(for="avatar") Hình ảnh
            input(
                id="avatar"
                type="file"
                class="form-control-file"
                name="avatar"
                accept="image/*"
                upload-image-input
            ) 
            img(
                src=""
                upload-image-preview
                class="image-preview mt-3"
            )
        
        div(
            class="form-group"
            upload-audio
            )
            label(for="audio") File âm thanh
            input(
                id="audio"
                type="file"
                class="form-control-file"
                name="audio"
                accept="audio/*"
                upload-audio-input
            ) 
            audio(
                controls
                upload-audio-play
            )
                source(src="")

        div(class="form-group")
            label(for="description") Mô tả
            textarea(
                id="description"
                class="form-control"
                name="description"
                rows="5"
            ) 
        
        div(class="form-group form-check form-check-inline")
            input(
                id="statusActive"
                type="radio"
                class="form-check-input"
                name="status"
                value="active"
                checked
            ) 
            label(for="statusActive" class="form-check-label") Hoạt động
        div(class="form-group form-check form-check-inline")
            input(
                id="statusInActive"
                type="radio"
                class="form-check-input"
                name="status"
                value="inactive"
            ) 
            label(for="statusInActive" class="form-check-label") Dừng hoạt động
        div(class="form-group")
            button(
                type="submit"
                class="btn btn-primary"
            ) Tạo mới